#!/usr/local/bin/gnuplot
set terminal postscript eps colortext color "Courier, 10"
set output 'CCM1.eps'
#set logscale
set grid
set tics font ", 15"
set xlabel 'Time ' font ", 25"
set ylabel 'Vt-Current' font ", 25"
set title 'Current vs. Time' font ", 25"
set key top left 
set key font "Courier, 10" 
#set key autotitle
plot "ccm.txt" u 1:4 with line notitle


set output 'CCM2.eps'
set grid
set tics font ", 15"
set xlabel 'Time ' font ", 25"
set ylabel 'Voltage' font ", 25"
set title 'Nodes Voltages' font ", 25"
set key top left 
plot "ccm.txt" u 1:2 with line title "V(N1)", "ccm.txt" u 1:3 with line title "V(N2)"

set output 'CCM3.eps'
set grid
set tics font ", 15"
set xlabel 'Time ' font ", 25"
set ylabel 'Current' font ", 25"
set title 'Resistor Current' font ", 25"
set key top left 
plot "ccm.txt" u 1:5 with line notitle

set output 'CCM4.eps'
set grid
set tics font ", 15"
set xlabel 'Time ' font ", 25"
set ylabel 'Current' font ", 25" 
set title 'Memristor Current' font ", 25"
set key top left 
plot "ccm.txt" u 1:6 with line notitle

set output 'CCM5.eps'
set grid
set tics font ", 15"
set xlabel 'Time ' font ", 25"
set ylabel 'Voltage' font ", 25" 
set title 'Memristor Voltage' font ", 25"
set key top left 
plot "ccm.txt" u 1:($3-$2) with line notitle

set output 'CCM6.eps'
set grid
set tics font ", 15"
set xlabel 'Current ' font ", 25"
set ylabel 'Voltage' font ", 25" 
set title 'Current(Memristor) vs. Voltage(Memristor)' font ", 25"
set key top left 
plot "ccm.txt" u 6:($3-$2) with line notitle

set output 'CCM7.eps'
set grid
set tics font ", 15"
set xlabel 'Voltage ' font ", 25"
set ylabel 'Current' font ", 25"
set title 'Memristor Voltage vs. Input Current ' font ", 25"
set key top left 
plot "ccm.txt" u ($3-$2):4 with line notitle 

